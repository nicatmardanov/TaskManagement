
@using adyTask2.Models;

<div class="ml_add" id="ml_add">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary" data-collapsed="0">

                <div class="panel-heading">
                    <div class="panel-title">
                        İclas sətiri əlavə etmə formu
                    </div>

                    <div class="panel-options">
                        <a href="#" data-rel="collapse" class="hidden"><i class="entypo-down-open"></i></a>
                    </div>
                </div>

                <div class="panel-body">

                    <form role="form" class="form-horizontal form-groups-bordered" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Növ</label>
                                    <div class="col-sm-7">
                                        <select class="js-example-basic-single select2c form-control" name="ml_type" id="ml_type">
                                            @using (adyTaskManagementContext adyContext = new adyTaskManagementContext())
                                            {
                                                foreach (MlType item in adyContext.MlType)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            }

                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Departament</label>

                                    <div class="col-sm-7">

                                        <select id="mlDepartment" name="departmentId" class="js-example-basic-single select2c" required multiple>
                                        </select>

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Tag</label>

                                    <div class="col-sm-7">
                                        <input type="text" value="" class="form-control tagsinput" id="mlTags" />
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label for="description" class="col-sm-2 control-label">Açıqlama</label>

                                    <div class="col-sm-10">
                                        <textarea class="form-control m_description" required id="ml_description" placeholder="Açıqlama" name="description"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Məsul şəxs</label>

                                    <div class="col-sm-7">
                                        <select class="js-example-basic-single select2c form-control" required name="responsibleUser" id="responsibleUser">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Təqib edən</label>

                                    <div class="col-sm-7">
                                        <select class="js-example-basic-single select2c form-control" required name="mlFollowerUser" id="mlFollowerUser">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Təsdiqləyən</label>

                                    <div class="col-sm-7">
                                        <select class="js-example-basic-single select2c form-control" required name="identifierUser" id="identifierUser">
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Məlumat veriləcək</label>

                                    <div class="col-sm-7">

                                        <select name="informedUser" id="informedUserMl" class="js-example-basic-single select2c" multiple>
                                        </select>

                                    </div>
                                </div>
                            </div>

                            @{
                                var now = DateTime.UtcNow.AddHours(4);
                            }


                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Başlama Tarixi</label>

                                    <div class="col-sm-7">
                                        <div class="input-group">
                                            <input type="text" class="form-control datepicker" required id="meeting_l_start_date" data-format="dd/mm/yyyy" value="@now.Day/@now.Month/@now.Year">

                                            <div class="input-group-addon meeting_l_si">
                                                <a href="javascript:void(0)"><i class="entypo-calendar"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Bitmə Tarixi</label>

                                    <div class="col-sm-7">
                                        <div class="input-group meeting_l_fi">
                                            <input type="text" required class="form-control datepicker" id="meeting_l_finish_date" data-format="dd/mm/yyyy" @*value="27/11/2019"*@>

                                            <div class="input-group-addon">
                                                <a href="javascript:void(0)"><i class="entypo-calendar"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>



                        <div class="row row_twenty">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Sənədlər</label>

                                    <div class="col-sm-10">
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <span class="btn btn-info btn-file">
                                                <span class="fileinput-new">Yüklə</span>
                                                <span class="fileinput-exists">Dəyiş</span>
                                                <input type="file" name="mlFile" id="mlFile">
                                            </span>
                                            <span class="fileinput-filename"></span>
                                            <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">&times;</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row row_twenty meeting_line_add_submit_row">
                            <div class="col-md-3">
                                <a href="javascript:void(0)" class="btn btn-red btn-sm close_button">Bağla</a>
                            </div>

                            <div class="col-md-3">
                                <a href="javascript:void(0)" class="btn btn-green btn-sm saveMeetingLine">Yadda saxla</a>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>
