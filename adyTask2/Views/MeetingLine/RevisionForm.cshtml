@using adyTask2.Models;

<div class="ml_add">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary" data-collapsed="0">

                <div class="panel-heading">
                    <div class="panel-title">
                        Revizə formu
                    </div>

                    <div class="panel-options">
                        <a href="#" data-rel="collapse" class="hidden"><i class="entypo-down-open"></i></a>
                    </div>
                </div>

                <div class="panel-body">

                    <form role="form" class="form-horizontal form-groups-bordered" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Qeyd növü</label>
                                    <div class="col-sm-7">
                                        <select class="js-example-basic-single select2c form-control" name="rv_type" id="rv_type">
                                            @using (adyTaskManagementContext adyContext = new adyTaskManagementContext())
                                            {
                                                foreach (MlType item in adyContext.MlType.AsQueryable())
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            }

                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Departament</label>

                                    <div class="col-sm-7">

                                        <select id="rvDepartment" name="departmentId" class="js-example-basic-single select2c" required multiple>
                                        </select>

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Teqlər</label>

                                    <div class="col-sm-7">
                                        <input type="text" value="" required class="form-control tagsinput" id="rvTags" />
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label for="description" class="col-sm-2 control-label">Açıqlama</label>

                                    <div class="col-sm-10">
                                        <textarea class="form-control m_description" required id="rv_description" placeholder="Açıqlama" name="description"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Məsul şəxs</label>

                                    <div class="col-sm-7">
                                        <select class="js-example-basic-single select2c form-control" name="responsibleUser" id="responsibleUser">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Təsdiq edən</label>

                                    <div class="col-sm-7">
                                        <select class="js-example-basic-single select2c form-control" name="identifierUser" id="identifierUser">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Təqdib edən</label>

                                    <div class="col-sm-7">
                                        <select class="js-example-basic-single select2c form-control" name="rvFollowerUser" id="rvFollowerUser">
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Məlumat veriləcək</label>

                                    <div class="col-sm-7">

                                        <select name="informedUser" id="informedUserRv" class="js-example-basic-single select2c" required multiple>
                                        </select>

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Başlama Tarixi</label>

                                    <div class="col-sm-7">
                                        <div class="input-group">
                                            <input type="text" class="form-control datepicker" required id="rev_start_date" data-format="dd/mm/yyyy" value="27/11/2019">

                                            <div class="input-group-addon meeting_l_si">
                                                <a href="javascript:void(0)"><i class="entypo-calendar"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label">Bitmə Tarixi</label>

                                    <div class="col-sm-7">
                                        <div class="input-group meeting_l_fi">
                                            <input type="text" required class="form-control datepicker" id="rev_finish_date" data-format="dd/mm/yyyy" value="27/11/2019">

                                            <div class="input-group-addon">
                                                <a href="javascript:void(0)"><i class="entypo-calendar"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>



                        <div class="row row_twenty">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Sənədlər</label>

                                    <div class="col-sm-10">
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <span class="btn btn-info btn-file">
                                                <span class="fileinput-new">Yüklə</span>
                                                <span class="fileinput-exists">Dəyiş</span>
                                                <input type="file" name="rvFile" id="rvFile">
                                            </span>
                                            <span class="fileinput-filename"></span>
                                            <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">&times;</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row row_twenty meeting_line_add_submit_row">
                            @*<div class="col-md-3">
                                <a href="javascript:void(0)" class="btn btn-red btn-sm close_button">Bağla</a>
                            </div>*@
                            <div class="col-md-3">
                                <a href="javascript:void(0)" class="btn btn-green btn-sm saveRevision">Saxla</a>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>