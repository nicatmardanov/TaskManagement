@using adyTask2.Models
<div class="meeting_direct">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary" data-collapsed="0">

                <div class="panel-heading">
                    <div class="panel-title">
                        Yönləndir
                    </div>
                </div>

                <div class="panel-body">

                    <form role="form" class="form-horizontal form-groups-bordered" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Məsul şəxs</label>

                                    <div class="col-sm-10">
                                        <select class="form-control" name="responsibleUser" id="responsibleUser">
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Qeyd</label>

                                    <div class="col-sm-10">
                                        <textarea class="form-control direct_note" required id="direct_note" placeholder="Qeyd" name="direct_note"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Bitmə Tarixi</label>

                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <input type="text" required class="form-control datepicker" id="meeting_d_finish_date" data-format="dd/mm/yyyy" value="27/11/2019">

                                            <div class="input-group-addon">
                                                <a href="#"><i class="entypo-calendar"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row row_twenty meeting_direct_add_submit_row">
                            <div class="col-md-3 float-right">
                                <a href="javascript:void(0)" class="btn btn-green btn-sm saveDirect">Saxla</a>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>