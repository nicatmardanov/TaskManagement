<div class="meeting_direct">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary" data-collapsed="0">

                <div class="panel-heading">
                    <div class="panel-title">
                        Statusu yenilə
                    </div>
                </div>

                <div class="panel-body">

                    <form role="form" class="form-horizontal form-groups-bordered" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Status</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" name="status" id="status">
                                            <option value="1">Tamamla</option>
                                            <option value="2">Revizəyə göndər</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row row_twenty">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Qeyd</label>

                                    <div class="col-sm-10">
                                        <textarea class="form-control status_note" required id="status_note" placeholder="Qeyd" name="status_note"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row row_twenty meeting_status_change_submit_row">
                            <div class="col-md-3 float-right">
                                <a href="javascript:void(0)" class="btn btn-green btn-sm saveStatus">Saxla</a>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>